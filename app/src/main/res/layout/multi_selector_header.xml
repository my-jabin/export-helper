<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/multi_selector_title"
        style="@style/TextAppearance.helper.title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        android:layout_weight="1"
        android:text="@string/select_multiple_title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/multi_selector_header_dismiss"
        style="@style/TextAppearance.helper.button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        android:text="@string/text_finish"
        android:textAppearance="@style/TextAppearance.helper.body" />

</LinearLayout>