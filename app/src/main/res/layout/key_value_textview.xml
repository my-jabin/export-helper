<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_key"
        style="@style/TextAppearance.helper.caption"
        android:paddingStart="@dimen/padding_small"
        android:paddingEnd="@dimen/padding_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_gravity="start"
        android:layout_alignParentStart="true"
        tools:text="hello! This is a key from a " />

    <TextView
        android:id="@+id/tv_value"
        style="@style/TextAppearance.helper.body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_small"
        android:paddingEnd="@dimen/padding_small"
        android:lines="1"
        android:layout_gravity="end"
        android:layout_alignParentEnd="true"
        tools:text="Worldfdfdfdfdfdfdf" />

    <View
        android:id="@+id/divider_main"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_below="@id/tv_key"
        android:background="@color/background_normal" />
</merge>