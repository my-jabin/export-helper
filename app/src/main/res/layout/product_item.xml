                <!--android:text="@string/sale_price"-->
                <!--app:layout_constraintStart_toStartOf="@+id/tv_product_item_brand"-->
                <!--app:layout_constraintTop_toBottomOf="@+id/tv_product_purchase_price_title" />-->

            <!--<TextView-->
                <!--android:id="@+id/tv_product_sale_price"-->
