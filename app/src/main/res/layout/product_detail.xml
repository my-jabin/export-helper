    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.jiujiu.helper.ui.products.details.ProductDetailViewModel" />

        <variable
            name="product"
            type="com.jiujiu.helper.data.model.Product" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_normal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="@dimen/product_image_height"
            android:adjustViewBounds="false"
            android:scaleType="centerInside"
            android:src="@drawable/product_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/product_placeholder" />

        <EditText
            android:id="@+id/ed_product_brand"
            style="@style/TextAppearance.helper.caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="@{product.brand}"
            android:inputType="text"
            android:hint="@string/hint_product_brand"
            android:paddingStart="@dimen/padding_large"
            android:paddingTop="@dimen/padding_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <EditText
            android:id="@+id/ed_product_name"
            style="@style/TextAppearance.helper.productTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:ems="10"
            android:fontFamily="@font/josefin_sans"
            android:hint="@string/hint_product_name"
            android:inputType="text"
            android:paddingStart="@dimen/padding_normal"
            android:singleLine="true"
            android:text="@{product.name}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_product_brand" />


        <TextView
            android:id="@+id/tv_product_purchase_price_title"
            style="@style/TextAppearance.helper.productBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_small"
            android:paddingStart="@dimen/padding_normal"
            android:background="@android:color/white"
            android:text="@string/purchase_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_product_name" />

        <EditText
            android:id="@+id/ed_product_price"
            style="@style/TextAppearance.helper.productBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/white"
            android:fontFamily="casual"
            android:inputType="numberDecimal"
            android:paddingStart="@dimen/padding_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_product_name"
            tools:text="3.3" />

